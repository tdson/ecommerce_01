<div class="form-group">
  <%- if controller_name != "sessions" %>
    <%= link_to t(".link_login"), new_session_path(resource_name),
      class: "form-control btn btn-success btn-flat" %>
  <% end -%>
</div>
<div class="form-group">
  <%- if devise_mapping.registerable? && controller_name != "registrations" %>
    <%= link_to t(".link_signup"), new_registration_path(resource_name),
      class: "form-control btn btn-primary btn-flat" %>
  <% end -%>
</div>
<%- if devise_mapping.omniauthable? %>
  <div class="form-group">
    <%= link_to omniauth_authorize_path(resource_name, :facebook),
      class: "btn btn-flat btn-block btn-social btn-facebook" do %>
      <i class="fa fa-facebook"></i>
      <%= t ".btn_social", provider: :Facebook %>
    <% end %>
  </div>
  <div class="form-group">
    <%= link_to omniauth_authorize_path(resource_name, :google_oauth2),
      class: "btn btn-flat btn-block btn-social btn-google" do %>
      <i class="fa fa-google-plus"></i>
      <%= t ".btn_social", provider: :Google %>
    <% end %>
  </div>
  <div class="form-group">
    <%= link_to omniauth_authorize_path(resource_name, :twitter),
      class: "btn btn-flat btn-block btn-social btn-twitter" do %>
      <i class="fa fa-twitter"></i>
      <%= t ".btn_social", provider: :Twitter %>
    <% end %>
  </div>
<% end -%>

<div class="form-group">
  <%- if devise_mapping.recoverable? &&
    controller_name != "passwords" &&
    controller_name != "registrations" %>
    <%= link_to t(".link_reset"), new_password_path(resource_name) %><br />
  <% end -%>
  <%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
    <%= link_to t(".link_resend_conf"), new_confirmation_path(resource_name) %>
    <br />
  <% end -%>
  <%- if devise_mapping.lockable? &&
    resource_class.unlock_strategy_enabled?(:email) &&
    controller_name != "unlocks" %>
    <%= link_to t(".link_resend_conf"), new_unlock_path(resource_name) %><br />
  <% end -%>
</div>
