<h1><%= t ".header" %></h1>

<p><%= t ".greeting", name: @order.user.name %></p>
<p>
  <%= t(".mgs_thank_you").html_safe %>
  <%= order_url @order.id %>
</p>
<p>
  <table>
    <thead>
      <th><%= t ".th_product" %></th>
      <th><%= t ".th_quantity" %></th>
      <th><%= t ".th_price" %></th>
    </thead>
    <tbody>
      <% @order.order_products.each do |item| %>
        <tr>
          <td><%= item.product.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.product.price %></td>
        </tr>
      <% end %>
      <tr>
        <td></td>
        <td><%= t ".lb_total" %></td>
        <td>
          <strong>
            <%= number_to_currency @order.total_cost, unit: t(".currency") %>
          </strong>
        </td>
      </tr>
    </tbody>
  </table>
</p>
