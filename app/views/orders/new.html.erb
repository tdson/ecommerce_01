<div class="stepwizard col-md-offset-3">
  <div class="stepwizard-row setup-panel">
    <div class="stepwizard-step">
      <a href="#step-1" type="button" class="btn btn-primary btn-circle">
        <%= t ".icon_st_1" %>
      </a>
      <p><%= t ".step_1" %></p>
    </div>
    <div class="stepwizard-step">
      <a href="#step-2" type="button" class="btn btn-default btn-circle"
        disabled="disabled">
        <%= t ".icon_st_2" %>
      </a>
      <p><%= t ".step_2" %></p>
    </div>
    <div class="stepwizard-step">
      <a href="#step-3" type="button" class="btn btn-default btn-circle"
        disabled="disabled">
        <%= t ".icon_st_3" %>
      </a>
      <p><%= t ".step_3" %></p>
    </div>
  </div>
</div>

<%= form_for @order do |f| %>
  <div class="col-xs-6 col-md-offset-3 order-alert">
    <%= render "shared/error_messages", object: f.object %>
  </div>
  <div class="row setup-content" id="step-1">
    <div class="col-xs-6 col-md-offset-3">
      <div class="col-md-12">
        <h3><%= t ".step_1" %></h3>
        <div class="form-group">
          <%= f.label t(".lb_full_name"), class: "control-label" %>
          <%= text_field_tag :full_name, current_user.name,
            {class: "form-control", required: true, maxlength: 128} %>
        </div>
        <div class="form-group">
          <%= f.label t(".lb_phone"), class: "control-label" %>
          <%= text_field_tag :phone, current_user.phone_number,
            {class: "form-control", required: true, maxlength: 15} %>
        </div>
        <div class="form-group">
          <%= f.label t(".lb_address"), class: "control-label" %>
          <%= text_area_tag :shipping_address, current_user.address,
            {class: "form-control", required: true, maxlength: 255} %>
        </div>
        <hr>
        <div class="form-group text-center">
          <%= button_tag type: :button,
            class: "btn btn-flat btn-primary nextBtn" do %>
            <%= t ".btn_next" %>
            <i class="fa fa-angle-double-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row setup-content" id="step-2">
    <div class="col-xs-6 col-md-offset-3">
      <div class="col-md-12">
        <h3><%= t ".step_2" %></h3>
        <div class="form-group">
          <%= f.label :payment_method, t(".lb_method"),
            class: "control-label" %>
          <p>
            <%= radio_button_tag :payment_method, :cod, checked: true %>
            <%= label_tag :payment_method_cod, t(".method_1") %>
          </p>
          <p class="disable">
            <%= radio_button_tag :payment_method, :paypal, false,
              disabled: true %>
            <%= label_tag :payment_method_paypal, t(".method_2") %>
          </p>
        </div>
        <hr>
        <div class="form-group text-center">
          <%= button_tag type: :button,
            class: "btn btn-flat btn-primary nextBtn", id: "btn-next-2" do %>
            <%= t ".btn_next" %>
            <i class="fa fa-angle-double-right"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="row setup-content" id="step-3">
    <div class="col-xs-6 col-md-offset-3">
      <div class="col-md-12">
        <h3><%= t ".step_3" %></h3>
        <p><%= t ".cfr_msg" %></p>
        <div class="info">
          <div class="group">
            <span><%= t ".lb_full_name" %>:</span>
            <span id="i-full-name" class="strong"></span>
          </div>
          <div class="group">
            <span><%= t ".lb_address" %>:</span>
            <span id="i-address" class="strong"></span>
          </div>
          <div class="group">
            <span><%= t ".lb_phone" %>:</span>
            <span id="i-phone" class="strong"></span>
          </div>
          <div class="group">
            <span><%= t ".lb_method" %>:</span>
            <span id="i-method" class="strong"></span>
          </div>
        </div>
        <hr>
        <div class="form-group text-center">
          <%= button_tag type: :submit,
            class: "btn btn-flat btn-success nextBtn" do %>
            <i class="fa fa-check-circle"></i>
            <%= t ".btn_submit" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
