<tr>
  <td>
    <%= link_to t(".name_prefix", id: order.id),
      edit_admin_order_path(order.id) %>
  </td>
  <td><%= order.full_name %></td>
  <td><%= order.shipping_address %></td>
  <td><%= l order.created_at, format: :date_time %></td>
  <td>
    <div class="label label-<%= Settings.order_status_classes[order.status] %>">
      <%= order.status %>
    </div>
  </td>
  <td>
    <%= link_to edit_admin_order_path(order.id),
      class: "btn btn-warning btn-xs btn-option", target: :_blank do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to admin_order_path(order.id, status: params[:status]),
      method: :delete,
      class: "btn btn-danger btn-xs btn-option",
      data: {confirm: t("admin.delete_confirmation")} do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
