<div class="container">
  <div class="row" id="product">
    <div class="col-lg-12">
      <div class="col-lg-offset-2 col-md-4 ">
        <h2><b><%= t "products.admin.new.create_product" %></b></h2>
        <%= form_for [:admin, @product] do |f| %>
          <%= render "product_form", f: f %>
          <%= f.submit t("products.admin.new.bt_create"), class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
