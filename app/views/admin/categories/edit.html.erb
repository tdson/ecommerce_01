<div class="row">
  <div class="container">
    <div class="col-lg-12">
      <div class="col-lg-3"></div>
      <div class="center col-md-6">
        <h2 class = "text-center">
          <b>
            <%= t "categories.admin.edit.edit_category" %>
          </b>
        </h2>
        <%= form_for [:admin, @category] do |f| %>
          <%= render "category_form", f: f %>
          <div class="text-center form-group">
            <%= f.submit t("categories.admin.edit.bt_update"),
              class: "btn btn-primary " %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
